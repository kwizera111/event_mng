<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Authentication | EMS</title>

<style>
* {
    box-sizing: border-box;
    font-family: Arial, Helvetica, sans-serif;
    margin: 0;
    padding: 0;
}

/* BODY */
body {
    background: linear-gradient(to right, #1e3a8a, #2563eb);
    min-height: 100vh;
}

/* NAVBAR */
nav {
    background: #1e40af;
    padding: 12px 0;
}

.nav-container {
    max-width: 1200px;
    margin: auto;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.logo {
    color: white;
    font-weight: bold;
    font-size: 20px;
}

.nav-links {
    display: flex;
    gap: 20px;
}

.nav-links a {
    color: white;
    text-decoration: none;
    font-weight: bold;
}

.nav-links a:hover {
    text-decoration: underline;
}

/* AUTH CONTAINER */
.auth-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40px 15px;
}

.auth-container {
    background: white;
    width: 100%;
    max-width: 420px;
    border-radius: 12px;
    box-shadow: 0 15px 30px rgba(0,0,0,0.25);
    overflow: hidden;
}

/* TOGGLE */
.toggle {
    display: flex;
}

.toggle label {
    flex: 1;
    text-align: center;
    padding: 15px;
    font-weight: bold;
    cursor: pointer;
    background: #e5e7eb;
    color: #1e3a8a;
}

input[type="radio"] {
    display: none;
}

#login:checked ~ .toggle label[for="login"],
#register:checked ~ .toggle label[for="register"] {
    background: #2563eb;
    color: white;
}

/* FORMS */
.forms {
    padding: 25px;
}

form {
    display: none;
}

#login:checked ~ .forms .login-form,
#register:checked ~ .forms .register-form {
    display: block;
}

h2 {
    text-align: center;
    color: #1e3a8a;
    margin-bottom: 20px;
}

/* INPUTS */
input, select {
    width: 100%;
    padding: 12px;
    margin-bottom: 15px;
    border-radius: 6px;
    border: 1px solid #cbd5e1;
}

input:focus, select:focus {
    outline: none;
    border-color: #2563eb;
}

/* BUTTON */
button {
    width: 100%;
    padding: 12px;
    border: none;
    background: #2563eb;
    color: white;
    font-size: 16px;
    font-weight: bold;
    border-radius: 6px;
    cursor: pointer;
}

button:hover {
    background: #1e3a8a;
}

/* FOOTER TEXT */
.form-footer {
    text-align: center;
    font-size: 14px;
    margin-top: 10px;
    color: #64748b;
}

/* RESPONSIVE */
@media (max-width: 600px) {
    .nav-links {
        gap: 12px;
        font-size: 14px;
    }
}
</style>
</head>

<body>

<!-- NAVBAR -->
<nav>
    <div class="nav-container">
        <div class="logo">EMS</div>
        <div class="nav-links">
            <a href="/">Home</a>
            <a href="/events">Available Events</a>
            <a href="/contact">Contact</a>
        </div>
    </div>
</nav>

<!-- AUTH SECTION -->
<div class="auth-wrapper">
<div class="auth-container">

    <!-- TOGGLE INPUTS -->
    <input type="radio" id="login" name="toggle" checked>
    <input type="radio" id="register" name="toggle">

    <!-- TOGGLE BUTTONS -->
    <div class="toggle">
        <label for="login">Sign In</label>
        <label for="register">Sign Up</label>
    </div>

    <div class="forms">

        <!-- LOGIN FORM -->
        <form class="login-form" action="/auth/login" method="POST">
            <h2>Welcome Back</h2>

            <input type="email" name="email" placeholder="Email Address" required>
            <input type="password" name="password" placeholder="Password" required>

            <select name="role" required>
                <option value="">Login as</option>
                <option value="admin">Admin</option>
                <option value="staff">Staff</option>
                <option value="participant">Participant</option>
            </select>

            <button type="submit">Login</button>

            <div class="form-footer">
                Secure role-based access
            </div>
        </form>

        <!-- REGISTER FORM -->
        <form class="register-form" action="/auth/register" method="POST">
            <h2>Create Account</h2>

            <input type="text" name="name" placeholder="Full Name" required>
            <input type="email" name="email" placeholder="Email Address" required>
            <input type="password" name="password" placeholder="Password" required>

            <select name="role" required>
                <option value="">Register as</option>
                <option value="admin">Admin</option>
                <option value="staff">Staff</option>
                <option value="participant">Participant</option>
            </select>

            <button type="submit">Register</button>

            <div class="form-footer">
                Your email must be unique
            </div>
        </form>

    </div>
</div>
</div>

</body>
</html>